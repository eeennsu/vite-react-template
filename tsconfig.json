{
  "compilerOptions": {
      "composite": true,
      "skipLibCheck": true,
      "module": "ESNext",
      "target": "ESNext",
      "downlevelIteration": true,
      "moduleResolution": "bundler",
      "allowSyntheticDefaultImports": true,
      "lib": [
          "dom",
          "DOM.Iterable",
          "ESNext"
      ],
      "noErrorTruncation": true,
      "allowImportingTsExtensions": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "react-jsx",
      "strict": true,
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "noFallthroughCasesInSwitch": true,
      "baseUrl": "src",
      "paths": {
          "@/app/*": [
              "./app/*"
          ],
          "@/pages/*": [
              "./pages/*"
          ],
          "@/widgets/*": [
              "./widgets/*"
          ],
          "@/features/*": [
              "./features/*"
          ],
          "@/entities/*": [
              "./entities/*"
          ],
          "@/lib/*": [
              "./lib/*"
          ],
          "@/shared/*": [
              "./shared/*"
          ]
      }
  },
  "include": [
      "src",
      "vite.config.ts"
  ]
}